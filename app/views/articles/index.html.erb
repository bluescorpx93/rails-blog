	<% @articles.each do |article| %>
	<tr> 
		<td> <%= article.title =%> </td>
		<td> <span> <%= article.text =%></span> </td>
		<td> <span><%= link_to 'Show', article_path(article) %> </span> </td>
		<td> <span><%= link_to 'Edit', edit_article_path(article) %> </span></td>
		<td> <span><%= link_to 'Destroy', article_path(article),
			method: :delete, 
			data: { confirm: 'Are you sure?'} %> </span> 
		</td>
	</tr>
	<% end %>
</table>